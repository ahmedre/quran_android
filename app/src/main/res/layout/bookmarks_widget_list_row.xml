<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:orientation="horizontal">

  <ImageView
      android:id="@+id/widget_favorite_icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_marginLeft="@dimen/audiobar_separator_padding"
      android:layout_marginRight="@dimen/audiobar_separator_padding"
      app:srcCompat="@drawable/ic_favorite" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <TextView
        android:id="@+id/sura_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textAppearance="@style/TitleText"
        tools:text="" />

    <TextView
        android:id="@+id/sura_meta_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sura_details_color"
        android:textSize="14sp"
        tools:text="" />

  </LinearLayout>

</LinearLayout>
